    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug client",
            "cargo": {
                "args": [
                    "build",
                    "--bin=goodmetrics",
                ],
                "filter": {
                    "name": "goodmetrics",
                    "kind": "bin"
                }
            },
            "args": [
                "send",
                "{\"metric\": \"testservice_demonstrate\", \"dimensions\": [{\"name\": \"hostname\", \"value\": \"localhost\"}, {\"name\": \"customer\", \"value\": \"yourmom\"}], \"measurements\": [{\"name\":\"available_messages\", \"unix_nanos\": 21963782871, \"measurement\":{\"Gauge\":42.0}}, {\"name\": \"outstanding_requests\", \"unix_nanos\": 21963782871, \"measurement\": {\"StatisticSet\": {\"min\": 3, \"max\": 8, \"sum\": 15, \"count\": 3}}}, {\"name\": \"demonstrate_us\", \"unix_nanos\": 21963782871, \"measurement\": {\"Histogram\": {\"buckets\": [{\"threshold\": 10, \"count\": 187}, {\"threshold\": 20, \"count\": 6}]}}} ]}",
                "--"
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug server",
            "cargo": {
                "args": [
                    "build",
                    "--bin=goodmetricsd",
                ],
                "filter": {
                    "name": "goodmetricsd",
                    "kind": "bin"
                }
            },
            "args": [
                "--connection-string", "host=192.168.1.201 port=2345 user=metrics password=metrics dbname=metrics connect_timeout=10",
            ],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'goodmetrics'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=goodmetrics",
                    "--package=goodmetrics"
                ],
                "filter": {
                    "name": "goodmetrics",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}